{
  "manifest_version": 3,
  "name": "GTM Account Color Highlighter",
  "version": "1.0.3",
  "description": "Adds alternating background colors to Google Tag Manager account cards for easier identification",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "*://tagmanager.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}